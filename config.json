{
    "development" : {
        "metric": {
            "format": "{REDIS_ADDRESS}.{METRIC}"
        },
        "logs": {
            "level": "debug",
            "path": "./logs"
        },
        "statsd": {
            "host": "localhost",
            "port": "8125",
            "debug": true
        }
    },

    "production" : {
        "metric": {
            "format": "{REDIS_ADDRESS}.{METRIC}"
        },
        "logs": {
            "level": "warn",
            "path": "/var/log/redis2statsd"
        },
        "statsd" : {
           "host": "statsd.productionaddress.com"
        }
    }
}
